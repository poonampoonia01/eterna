generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id             String    @id @default(uuid())
  tokenIn        String
  tokenOut       String
  amount         Float
  targetPrice    Float
  selectedDex    String?
  executedPrice  Float?
  status         String    @default("pending")
  txHash         String?
  failureReason  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
}

